<Window x:Class="ResourceUsageMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ResourceUsageMonitor"
		xmlns:ig="http://schemas.infragistics.com/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        mc:Ignorable="d"
        Title="Resource Manager" Height="450" Width="800">
	<Grid>
		<Label x:Name="LabelCpu" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top"/>
		<TabControl x:Name="TabsCpu" SelectedItem="{Binding ElementName=TabPerCore, Mode=OneWay}" Margin="0,50,0,0">
			<TabItem x:Name="TabAllCore" Header="CPU(Overall)">
				<Grid>
					<oxy:PlotView x:Name="AllCpuPlotView" Grid.ColumnSpan="2"/>
				</Grid>
			</TabItem>
			<TabItem x:Name="TabPerCore" Header="CPU(Per core)">
				<Grid x:Name="TabGridPerCore">
				</Grid>
			</TabItem>
			<TabItem x:Name="TabProcess" Header="Processes">
				<Grid x:Name="TabGridProcess">
					<TextBox x:Name="TextBoxProcess" TextChanged="TextBoxProcessTextChanged" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
					<Button x:Name="buttonLowPriority" Click="ButtonLowPriorityClick"  Content="Low Priority" HorizontalAlignment="Left" Margin="146,12,0,0" VerticalAlignment="Top"/>
					<Button x:Name="buttonTerminate" Click="ButtonTerminateClick" Content="Terminate" HorizontalAlignment="Left" Margin="226,12,0,0" VerticalAlignment="Top"/>
					<Label x:Name="LabelProcessSearchresult" Content="" HorizontalAlignment="Left" Margin="10,40,0,0" VerticalAlignment="Top"/>
				</Grid>
			</TabItem>
		</TabControl>
	</Grid>
</Window>
